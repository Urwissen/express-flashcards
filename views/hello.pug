extends layout.pug 

block content
    if name
        h2 Welcome, #{name}!

        form(action="/hello", method="post")
            label Want Change your name?:
                input(type="text", name="username")
            button("submit") Change
    else 
        h2 Welcome, Guest!

        form(action="/hello", method="post")
            label Please enter your name:
                input(type="text", name="username")
            button("submit") Submit